{
	"name": "@lesjoursfr/bootstrap-context-menu",
	"version": "0.0.2",
	"description": "Contextual Menu for Bootstrap.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lesjoursfr/bootstrap-context-menu.git"
	},
	"homepage": "https://github.com/lesjoursfr/bootstrap-context-menu#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/bootstrap-context-menu/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "22.x || 24.x"
	},
	"browserslist": [
		"> 1%",
		"last 3 versions",
		"not dead"
	],
	"type": "module",
	"exports": {
		"types": "./dist/index.d.ts",
		"default": "./dist/index.js"
	},
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"eslint-check": "eslint",
		"eslint-fix": "eslint --fix",
		"stylelint-check": "stylelint **/*.scss",
		"stylelint-fix": "stylelint **/*.scss --fix",
		"prettier-check": "prettier --check .",
		"prettier-fix": "prettier --write .",
		"build-esm": "tsc && node assets.js",
		"build-browser": "webpack --mode production --config ./server/webpack.config.js --progress",
		"build": "npm run build-esm && npm run build-browser",
		"server": "webpack serve --mode development --config ./server/webpack.config.js --hot --open"
	},
	"files": [
		"src/**/*",
		"dist/**/*",
		"build/**/*"
	],
	"keywords": [
		"bootstrap",
		"context",
		"menu"
	],
	"dependencies": {
		"@lesjoursfr/browser-tools": "^2.0.2"
	},
	"devDependencies": {
		"@eslint/js": "10.0.1",
		"@fortawesome/fontawesome-free": "7.2.0",
		"@popperjs/core": "2.11.8",
		"@tsconfig/next": "2.0.5",
		"@types/bootstrap": "5.2.10",
		"@types/node": "24.10.13",
		"bootstrap": "5.3.8",
		"css-loader": "7.1.3",
		"css-minimizer-webpack-plugin": "7.0.4",
		"eslint": "10.0.0",
		"eslint-config-prettier": "10.1.8",
		"fs-extra": "11.3.3",
		"globals": "17.3.0",
		"mini-css-extract-plugin": "2.10.0",
		"postcss": "8.5.6",
		"prettier": "3.8.1",
		"sass": "1.97.3",
		"sass-loader": "16.0.7",
		"stylelint": "17.2.0",
		"stylelint-config-standard-scss": "17.0.0",
		"terser-webpack-plugin": "5.3.16",
		"ts-loader": "9.5.4",
		"ts-node": "10.9.2",
		"typescript": "5.9.3",
		"typescript-eslint": "8.55.0",
		"webpack": "5.105.2",
		"webpack-cli": "6.0.1",
		"webpack-dev-server": "5.2.3"
	},
	"peerDependencies": {
		"@popperjs/core": "^2.11.8",
		"bootstrap": "^5.3.8"
	},
	"dependenciesMeta": {
		"@parcel/watcher": {
			"built": true
		}
	},
	"packageManager": "yarn@4.12.0"
}
